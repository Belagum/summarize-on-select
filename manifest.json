{
  "name": "Summarize On Select",
  "description": "Выдели текст, нажми Alt+N — краткая сводка откроется в отдельном окне.",
  "version": "1.2.0",
  "manifest_version": 3,
  "browser_specific_settings": {
    "gecko": {
      "id": "admin@belagum.ru",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    },
    "gecko_android": {
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["https://api.openai.com/*"],

  "background": {
    "service_worker": "src/background/background.js"
  },

  "options_page": "src/options/options.html",

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Summarize On Select"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "run_at": "document_idle"
    }
  ],

  "commands": {
    "summarize-selection": {
      "suggested_key": { "default": "Alt+N" },
      "description": "Суммировать текущее выделение"
    }
  }
}
