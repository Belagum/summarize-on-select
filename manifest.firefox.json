{
  "name": "Summarize On Select",
  "description": "Выдели текст, нажми Alt+N — краткая сводка откроется в отдельном окне.",
  "version": "1.2.0",
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "summarize-on-select@example.com",
      "strict_min_version": "102.0"
    }
  },

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "https://api.openai.com/*"
  ],

  "background": {
    "scripts": ["src/background/background.js"]
  },

  "options_page": "src/options/options.html",

  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Summarize On Select"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "run_at": "document_idle"
    }
  ],

  "commands": {
    "summarize-selection": {
      "suggested_key": { "default": "Alt+N" },
      "description": "D���D�D�D,�?D_D�D��,�O �,D�D����%D�D� D��<D'D�D�D�D�D,D�"
    }
  }
}
